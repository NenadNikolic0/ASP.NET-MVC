
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!--Dashboard header-->
<div class="row custom-navbar">
    <div class="col-xs-3">
        <span class="logo">Hope CRM</span>
    </div>

    <div class="col-xs-6">

    </div>

    <div class="col-xs-3">
        <div class="col-xs-10">
            <span class="glyphicon glyphicon-user user-logout">&nbsp;@ViewBag.Zip</span>
        </div>

        <div class="col-xs-2">
            <span class="glyphicon glyphicon-triangle-bottom triangle-bottom"></span>
        </div>
    </div>
</div>

<!--Dashboard body-->
<div class="container dashboard-body">

</div>
<!--Dashboard footer-->
<div class="row dashboard-footer text-center">
    <span class="product-rights">&#169;&nbsp;&nbsp;2018</span>
</div>


<!--Logout div-->
<div class="row logout-div">
    <div class="row logout-div-body">
        <span class="zip">@ViewBag.Zip</span>
        <span class="email">@ViewBag.Email</span>
    </div>

    <div class="row logout-div-footer text-right">
        <a href="/" class="btn btn-default signout-button">Sign out</a>
    </div>

</div>

